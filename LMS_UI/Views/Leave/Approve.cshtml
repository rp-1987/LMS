

@{
    ViewBag.Title = "Approve";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h3>Approve/Reject Leaves</h3>
@using (Ajax.BeginForm("ApproveResponse", new AjaxOptions { UpdateTargetId = "dvDetails", HttpMethod = "POST", InsertionMode = InsertionMode.Replace, LoadingElementId = "dvLoader" }))
{
    <div class="grid">
        <div class="row cells4">
            <div class="cell">
                Staff Name(Contains)
            </div>
            <div class="cell">
                <input id="txtName" type="text" />
            </div>
            <div class="cell">
                Leave Type
            </div>
            <div class="cell">
                @Html.ListBox("LeaveType", (IEnumerable<SelectListItem>)ViewBag.LeaveTypeID, "--Select Leave Type--")
            </div>
        </div>
        <div class="row cells4">
            <div class="cell">
                From Date
            </div>
            <div class="cell">
                <div class="input-control text full-size" data-role="datepicker" id="dvFromDate" data-format="dd-mmm-yyyy">
                            @Html.TextBox("txtFromDate")
                            <button id="btnFromDate" class="button"><span class="mif-calendar"></span></button>
                        </div>
            </div>
            <div class="cell">
                To Date
            </div>
            <div class="cell">
                <div class="input-control text full-size" data-role="datepicker" id="dvToDate" data-format="dd-mmm-yyyy" data-day-click="day_click">
                            @Html.TextBox("txtToDate")
                            <button id="btnToDate" class="button"><span class="mif-calendar"></span></button>
                        </div>
            </div>
        </div>
        <div class="row cells4">
            <div class="cell colspan4">
                <input id="Submit1" type="submit" value="Submit" />
            </div>
        </div>
    </div>
}

<div id="dvLoader" style="display: none;">
    Loading...........
</div>
<div id="dvDetails">
    
</div>
